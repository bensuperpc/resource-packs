ZIP := 7z

OPTION_ZIP := a -m0=Copy

SOURCE_FOLDER := ./ressource-packs/*

OUTPUT_FILE := ressource-packs.zip

.PHONY: all
all: build

.PHONY: build
build:
	$(ZIP) $(OPTION_ZIP) $(OUTPUT_FILE) $(SOURCE_FOLDER)

.PHONY: clean
clean:
	rm $(OUTPUT_FILE)
